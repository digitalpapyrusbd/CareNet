{
  "name": "caregiver-platform",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset": "prisma migrate reset --force && npm run db:seed",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:performance": "jest --testPathPattern=performance",
    "test:security": "jest --testPathPattern=security",
    "test:accessibility": "jest --testPathPattern=accessibility",
    "test:load": "artillery run tests/load/load-test-config.yml",
    "test:all": "npm run test:performance && npm run test:security && npm run test:accessibility && npm run test:load",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "ci": "npm run lint && npm run type-check && npm run test:ci",
    "analyze": "ANALYZE=true npm run build",
    "build:production": "next build",
    "build:analyze": "npm run analyze",
    "deploy": "npm run build && npm run start",
    "perf:audit": "npm run test:performance && npm run analyze",
    "security:audit": "npm audit && npm run test:security"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.2",
    "@types/qrcode": "^1.5.6",
    "@upstash/ratelimit": "^1.0.4",
    "@upstash/redis": "^1.28.0",
    "autoprefixer": "^10.4.16",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "critters": "^0.0.25",
    "crypto": "^1.0.1",
    "date-fns": "^4.1.0",
    "firebase-admin": "^13.6.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.294.0",
    "next": "14.0.4",
    "next-auth": "^4.24.13",
    "postcss": "^8.4.31",
    "qrcode": "^1.5.4",
    "react": "^18.2.0",
    "react-hook-form": "^7.48.2",
    "speakeasy": "^2.0.0",
    "sqlite3": "^5.1.7",
    "tailwind-merge": "^2.6.0",
    "tailwindcss": "^3.3.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@prisma/client": "^6.19.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^3.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.37",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "artillery": "^2.0.26",
    "eslint": "^8.54.0",
    "eslint-config-next": "^14.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.0",
    "node-fetch": "^2.7.0",
    "prettier": "^3.1.0",
    "prettier-plugin-tailwindcss": "^0.5.7",
    "prisma": "^6.19.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.2",
    "whatwg-fetch": "^3.6.20"
  },
  "engines": {
    "node": ">=18.17.0"
  }
}
